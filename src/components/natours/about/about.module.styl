@import "assets/styles/global"

.about {
    background-color: #f1f1f1
    padding: 25rem 0
    margin-top: -20dvh
}

.title_box {
    text-align: center
}

.title {
    display inline-block
    font-size: 3.5rem
    text-transform: uppercase
    font-weight: 700
    background-image: linear-gradient(to right, color_primary_light, color_primary_dark)
    background-clip: text
    color: transparent
    transition: transform .2s
    
    &:hover {
        transform: skew(15deg, -2deg) scale(1.1)
        text-shadow: .5rem 1rem 2rem rgba(0, 0, 0, .2)
    }
}

.bt {
    &:link, &:visited {
        font-size: text_size
        color: color_primary
        display inline-block
        text-decoration: none
        border-bottom: 1px solid color_primary
        padding: 3px
        transition: all .2s
    }

    &:hover {
        background-color: color_primary
        color: #fff
        box-shadow: 0 1rem 2rem rgba(0, 0, 0, .15)
        transform: translateY(-2px)
    } 

    &:active {
        box-shadow: 0 .5rem 1rem rgba(0, 0, 0, .15)
        transform: translateY(0)
    }
}


.box {
    width: 50%

    &_title {
        font-size: text_size
        font-weight: 700
        text-transform: uppercase
    }

    &_title:last-of-type {
        padding 2rem 0
    }

    .text {
        font-size: text_size
    }
}

.composition {
    position: relative
    width: 50%

    .img {
        width: 55%
        box-shadow: 0 1.5rem 4rem rgba(0, 0, 0, .4)
        position: absolute
        z-index: 1
        outline-offset: 2rem
        transition: all .25s

        &1 {
            left: 0
            top: -2rem
        }
        &2 {
            right: 0
            top: 2rem
        }
        &3 {
            left: 20%
            top: 10rem
        }

        &:hover {
            outline: 1.5rem solid color_primary
            transform: scale(1.05)
            box-shadow: 0 2.5rem 4rem rgba(0, 0, 0, .6)
            z-index 2
        }
    }

    &:hover .img:not(:hover) {
        transform: scale(.92)
    }
}

.c {
    display flex
    gap: 4rem
    width: 114rem
    margin: 8rem auto
}