
.h {
    position: relative;
    height: 95vh;
    background: top / cover no-repeat linear-gradient(to right bottom, #7ed56fcc, #28b485cc), url("assets/img/hero.jpg") ;
    clip-path: polygon(0 0, 100% 0, 100% 80%, 0 100%);
}

.logo-box {
    position: absolute;
    top: 40px;
    left: 40px;
}

.logo {
    height: 35px;
}


.text-box {
    position: absolute;
    top: 40%;
    right: 50%;
    transform: translate(50%, -50%);
    text-align: center;
}

.heading-primary {
    color: #fff;
    
    & span {
        display: block;
        text-transform: uppercase;
    }
}

.heading-primary-main {
    animation: move_in_left 1s .5s;
    animation-fill-mode: backwards;
    font-size: 5.6rem;
    letter-spacing: 2rem;
}

.heading-primary-sub {
    animation: move_in_right 1s;
    font-weight: 700;
    letter-spacing: 1rem;
    backface-visibility: hidden;
}

@keyframes move_in_left {
    0% {
        opacity: 0;
        transform: translate(-100px);
    }

    80% {
        transform: translateX(12px);
    }
    
    100% {
        opacity: 1;
        transform: translate(0);
    }
}


@keyframes move_in_right {
    0% {
        opacity: 0;
        transform: translate(120px, 40px) rotate(-10deg);
    }

    80% {
        transform: translateX(-12px);
    }
    
    100% {
        opacity: 1;
        transform: translate(0) ;
    }
}

@keyframes move_in_bottom {
    0% {
        opacity: 0;
        transform: translateY(60px);
    }
    
    100% {
        opacity: 1;
        transform: translate(0) ;
    }
}


.b:link, .b:visited {
    display: inline-block;
    margin-top: 80px;
    padding: 15px 40px;
    text-transform: uppercase;
    text-decoration: none;
    transition:  transform .2s;
    position: relative;
    animation: move_in_bottom .6s .7s;
    animation-fill-mode: backwards;
}

.b:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, .2);
}

.b:active {
    transform: translateY(-1px);
    box-shadow: 0 5px 10px rgba(0, 0, 0, .2);
}

.b::after {
    content: "";
    display: inline-block;
    height: 100%;
    width: 100%;
    border-radius: 50px;
    position: absolute;
    top: 0;
    left: 0;
    z-index: -1;
    transition: transform .4s, opacity .4s;
}


.b:hover::after {
    transform: scale(1.4);
    opacity: 0;
}

.b-white {
    background-color: #fff;
    color: #777;
    border-radius: 50px;
}

.b-white::after {
    background-color: #fff;
}