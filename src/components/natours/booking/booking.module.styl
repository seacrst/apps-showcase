@import "assets/styles/global"

.header {
    margin-bottom: 4rem

    .title {
        display inline-block
        font-size: 3.5rem
        text-transform: uppercase
        font-weight: 700
        background-image: linear-gradient(to right, color_primary_light, color_primary_dark)
        background-clip: text
        color: transparent
        transition: transform .2s

        &:hover {
            transform: skew(15deg, -2deg) scale(1.1)
            text-shadow: .5rem 1rem 2rem rgba(0, 0, 0, .2)
        }
    }
}

.booking {
    padding: 15rem 0
    background-image: linear-gradient(to right bottom, color_primary_light, color_primary_dark)
}

.box {
    width 114rem
    margin: 0 auto
}

.book {
    padding: 4rem
    background-image: linear-gradient(105deg, rgba(white, .9) 0%, rgba(white, .9) 50%, transparent 50%), url("assets/img/nat-10.jpg")
    background-size: cover
    background-repeat: no-repeat
    border-radius: 3px
    box-shadow: 0 1.5rem 4rem rgba(black, .30)

    height 50rem
}


.form {
    width: 50%

}

.field {
    &:not(:last-child) {
        margin-bottom: 2rem
    }
}

.input {
    display block
    width: 90%
    color: inherit
    font-family: inherit
    font-size: 1.5rem
    padding: 1.5rem 2rem
    border-radius: 2px
    background-color rgba(white, .5)
    border: none
    border-bottom: 3px solid transparent
    transition: all .3s

    &::-webkit-input-placeholder {
        color: #999
    }

    &:focus {
        outline: none
        box-shadow: 0 1rem 2rem rgba(black, .1)
        border-bottom: 3px solid color_primary
    }

    &:focus:invalid {
        border-bottom: 3px solid color_secondary_dark
    }
}

.label {
    font-size: 1.2rem
    font-weight: 700
    margin-top: 1rem
    margin-left: 2rem
    display block
    transition: all .3s
}

.input:placeholder-shown + .label {
    opacity: 0
    appearance: none
    transform: translateY(-4rem)
}

.input:focus ~ .label {
    opacity: 1
    transform: translateY(0)
}


.radio {
    width: 20%
    display: flex
    
    &_label {
        white-space: nowrap
        font-size: text_size
        cursor: pointer
        position relative
        padding-left: 5rem
    }
}

.radio_field {
    display flex
    align-items: center
    gap: 10rem
}

.radio_button {
    position absolute
    left: 0
    top: -.3rem
    width: 3rem
    height: 3rem
    border: 5px solid color_primary
    border-radius: 50%
    display: inline-block

    &::after {
        transition: opacity .3s ease-in-out
        content: ""
        display block
        width 1.4rem
        height 1.4rem
        background-color: color_primary
        border-radius: 50%
        position absolute
        top: 50%
        left: 50%
        transform: translate(-50%, -50%)
        opacity: 0
    }
}

.radio_input {
    display: none
}

.radio_input:checked ~ .radio_label .radio_button::after {
    opacity: 1
}

.submit {
    margin-top: 4rem
    outline: none
    border: none
    color: #fff
}