@import "assets/styles/global"

.modal_bg {
    position: fixed
    top: 0
    left: 0
    height: 100dvh
    width: 100%
    background-color: rgba(#000, .8)
    display: flex;
    justify-content: center
    z-index: 15
    opacity: 0
    visibility: hidden
    transition: all .4s

    &:target {
        opacity: 1
        visibility: visible
    }

    &:target .modal {
        transform: scale(1)
    }
}

.modal {
    overflow: hidden
    margin: auto
    width: 75%
    background-color: #fff
    box-shadow: 0 2rem 4rem rgba(#000, .2)
    border-radius: 4px
    display: flex
    gap: 4rem
    align-items: center
    position: relative
    transform: scale(0)
    transition: transform .4s .2s
}

.title {
    display inline-block
    font-size: 3.5rem
    text-transform: uppercase
    font-weight: 700
    background-image: linear-gradient(to right, color_primary_light, color_primary_dark)
    background-clip: text
    color: transparent
    transition: transform .2s
    
    &:hover {
        transform: skew(15deg, -2deg) scale(1.1)
        text-shadow: .5rem 1rem 2rem rgba(0, 0, 0, .2)
    }
}

.sub_title {
    color: #777
    text-transform: uppercase
    font-size: 2rem
}

.text {
    font-size: 1.8rem
    padding-right: 4rem
    column-count: 2
    column-gap: 4rem
    column-rule: 1px solid #eee
    hyphens: auto
}

.img {
    display: block
    width: 100%
}

.left {
    width 33.3333%
}

.right {
    width 66.6667%
}

.bt {
    margin-top: 4rem !important
    color: #fff
    font-size: 1.6rem
}

.close {
    position: absolute
    top: 0
    right: 1rem
    color: #777
    font-size: 5rem
    display inline-block
    line-height: 1
    text-decoration: none
    transition: color .3s

    &:hover {
        color: color_primary
    }
}